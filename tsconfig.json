{
  "compilerOptions": {
    /* Configurações de Módulo e Alvo */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,

    /* Configurações de Emissão (Engloba raiz para aceitar src e tests) */
    "outDir": "./dist",
    "rootDir": "./", 
    "noEmit": false, 
    
    /* Rigor e Performance */
    "strict": true,
    "noImplicitAny": false, // Desativado temporariamente para limpar erros de (.map) nos seus arquivos antigos
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "frontend-app"
  ]
}