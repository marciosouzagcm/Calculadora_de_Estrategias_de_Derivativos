{
  "compilerOptions": {
    /* Configurações de Módulo e Alvo */
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "isolatedModules": true, // Adicionado para resolver avisos do ts-jest e compatibilidade hibrida

    /* Configurações de Emissão (Essencial para Vercel) */
    "outDir": "./dist",
    "rootDir": "./src", 
    "noEmit": false, // DEVE ser false para gerar os arquivos na pasta dist
    
    /* Rigor e Performance */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts" // Incluído para que o VS Code e o TS reconheçam os tipos nos seus testes
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "frontend-app" // Ignora o frontend para não dar conflito de tipos
  ]
}