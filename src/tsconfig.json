{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    
    /* Configurações de Emissão */
    "outDir": "./dist",
    "rootDir": "./", 
    "noEmit": false,
    
    /* Rigor e Performance */
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "api/**/*.ts",
    "api/**/*.tsx",
    "api/index.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}