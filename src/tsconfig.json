{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    
    /* Configurações de Emissão */
    "outDir": "./dist",
    "rootDir": "./src", 
    "noEmit": false,
    
    /* Rigor e Performance */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts" // MANTENHA APENAS A SRC AQUI
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "frontend-app",
    "tests/**/*.ts" // ADICIONE ISSO PARA O BUILD IGNORAR OS TESTES
  ]
}